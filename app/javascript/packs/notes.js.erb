import $ from 'jquery';
import 'fullcalendar';

$(document).on('ready turbolinks:load', function()
{
    //FullCalendar    
    $('#calendar').fullCalendar({
    })

    $("input[name='note_search']").keyup(function(){
        var note_search = $(this).val() 
        // Filter
        if(note_search.length > 0)
        {
            $.ajax(
            {
                type: "get",
                url: "/notes",
                data: { note_search: note_search },
                dataType: "script"
            });
        };

        // Clean
        if(note_search.length == 0)
        {
            $.ajax(
            {
                type: "get",
                url: "/notes",
                dataType: "script"
            });
        };
    });
});
$(document).on('ready turbolinks:load', function(){

  $('#lock').popover({
      title: 'Your information is secure',
      content: 'Your log-in information in this service is encrypted, to see it click the "Show" button down below.',
      animation: true
  })

  $("input[name='info_search']").keyup(function(){
  var info_search = $(this).val() 
  
  //Filter
  if(info_search.length > 0){
   $.ajax({
      type: "get",
      url: "/infos",
      data: { info_search: info_search },
      dataType: "script"
    });
   };

  //Clean filter
  if(info_search.length == 0){
   $.ajax({
      type: "get",
      url: "/infos",
      dataType: "script"
    });
   };

  });
});
import $ from 'jquery';
import 'fullcalendar';

$(document).on('ready turbolinks:load', function()
{
    //AJAX Event call
    var events
    $.ajax({
        type: "get",
        url: "/events",
        dataType: "json",
        success: function(data)
        {
            //FullCalendar
            events = data
            $('#calendar').fullCalendar({
                events: events,
                themeSystem: 'bootstrap4',
                header: 
                {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay,listMonth'
                },
                weekNumbers: true,
                navLinks: true
            })
        }
    });
})
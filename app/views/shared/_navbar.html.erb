<nav class="navbar navbar-dark bg-dark border-bottom-navbar">
  <ul class="navbar-nav mx-auto">
    <li class="nav-item">
      <%= link_to  "MyOwnSpace", root_path, class: 'navbar-brand disabled brand-color' %>
    </li>
  </ul>
  <ul class="navbar-nav mx-5">
    <li class="nav-item">
      <!-- User in notes/index -->
      <% if(current_page?(notes_path))%>
        <form class="form-inline">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><%=link_to image_tag("home.png", width: 18, height: 18), root_path %></span>
            </div>
            <%= text_field_tag :note_search, "", placeholder: 'Search a note by title', class: 'form-control' %>
            <div class="input-group-prepend">
              <span class="input-group-text rounded-right" id="basic-addon2"><%=link_to image_tag("plus.png", width: 20, height: 20), new_note_path %><b class="ml-1"> | New Note </b></span>
            </div>
          </div>
        </form>
      <!-- User in notes/new -->
      <% elsif (current_page?(new_note_path))%>
        <%= link_to 'Back to your notes', notes_path, class: 'btn btn-outline-secondary mr-5 rounded rounded-pill' %>
        <a class="btn btn-outline-secondary rounded-pill ml-5" data-toggle="collapse" href="#new-note-collapse" role="button" aria-expanded="false" aria-controls="collapseExample">Info</a>
      <!-- User in infos/new -->
      <% elsif (current_page?(new_info_path))%>
        <%= link_to 'Back to your passwords', infos_path, class: 'btn btn-outline-secondary' %>
      <!-- User in infos/new -->
      <% elsif (current_page?(calendar_path))%>
        <h3 class="brand-color"><%=Date.today.strftime("%a, %e %b %Y")%></h3>
      <!-- User in recyclebin -->
      <% elsif (current_page?(recyclebin_path))%>
        <%= link_to 'Back to your notes', notes_path, class: 'btn btn-outline-secondary mr-5' %>
        <%= link_to 'DELETE ALL', clean_path, class: 'btn btn-outline-danger ml-5', data: {confirm: "Are you sure? This will permanently delete ALL your notes (can't be recovered)!"} %>
      <!-- User in infos/index -->
      <% elsif (current_page?(infos_path))%>
        <form class="form-inline">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1"><%=link_to image_tag("home.png", width: 18, height: 18), root_path %></span>
            </div>
              <%= text_field_tag :info_search, "", placeholder: 'Search by service', class: 'form-control' %>
            <div class="input-group-prepend">
              <span class="input-group-text rounded-right" id="basic-addon2"><%=link_to image_tag("plus.png", width: 20, height: 20), new_info_path %><b class="ml-1"> | New Info </b></span>
            </div>
          </div>
        </form>
      <% end %>
    </li>
  </ul>
  <!-- Sidebar -->
  <button onclick="openNav()" class="btn btn-outline-warning mx-auto">My Account</button>
</nav>
<!-- New note info -->
<div class="bg-dark">
  <div class="collapse mx-5" id="new-note-collapse" style="position: absolute; z-index: 1;">
    <div class="card card-body border border-secondary rounded-bottom">
      <p>You are creating a note, discover all of MyOwnSpace's functionalities!.<br> You can add images, code snippets, quotes, lists and many more! <br> Colors available:  <br>
      <span class="badge badge-yellow">..</span> Yellow <span class="badge badge-black">.. </span> Black <span class="badge badge-grey">.. </span> Grey <span class="badge badge-red">.. </span> Red <span class="badge badge-green">.. </span> Green <br> <span class="badge badge-purple">.. </span> Purple <span class="badge badge-orange">.. </span> Orange <span class="badge badge-white border border-black">.. </span> White <span class="badge badge-blue">.. </span> Blue <br>
      Reminder: We do monthly user color suggestions. The winner gets added !</p>
    </div>
  </div>
</div>

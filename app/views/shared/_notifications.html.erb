<% if(notice) %>
    <br>
    <p class="alert alert-primary alert-dismissible fade show pr-4 pl-4" role="alert"><%= notice %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button></p>
<% end %>

<% if(alert) %>
    <p class="alert-danger alert-dismissible fade show" role="alert"><%= alert %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button></p>
<% end %>
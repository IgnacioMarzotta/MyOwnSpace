<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Shared note</th>
      <th>Bodycolor</th>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th>Selected</th>
      <th>Recycled</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.shared_note_id %></td>
        <td><%= note.bodycolor_id %></td>
        <td><%= note.title %></td>
        <td><%= note.description %></td>
        <td><%= note.content %></td>
        <td><%= note.selected %></td>
        <td><%= note.recycled %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>

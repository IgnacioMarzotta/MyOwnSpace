<div class="form-margin">
  <%= form_with(model: @note, local: true) do |f| %>
    <div class="jumbotron jumbotron-fluid border border-light bg-lighter text-dark">
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-10 mb-2">
            <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
          </div>
          <div zclass="col-md-2 mb-2 form-control">
            <%= f.select :bodycolor_id, Bodycolor.all.collect{|x| [x.name, x.id]}, id: :note_bodycolor_id, prompt: "Select a colour" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
        <br>
        <%= f.rich_text_area :content, placeholder: "Content"%>
      </div>
      <br>
      <div class ="form-group">
        <%= f.submit :DONE, class: "btn btn-outline-primary"%>
      </div>
    </div>
  <% end %>

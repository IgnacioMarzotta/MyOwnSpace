<div class="card rounded-bottom m-3 <%= info.bodycolor.value%>" id="<%= info.id %>">
  <div class="card-header"><h5 class="card-title"><b><%= info.servicename%></b></h5></div>
  <div class="card-body">
    <p class="card-text">Username: <%= info.nickname %></p>
    <%=link_to image_tag("delete.png", width: 28, height: 28), info, class: 'card-link', method: :delete, data: { confirm: 'Are you sure? This password cannot be recovered after this', remote: true} %>
    <%=link_to image_tag("view.png", width: 28, height: 28), info, class: 'card-link' %>
  </div>
  <div class="card-footer">
    <small class="text-dark"> Last update: <%= info.updated_at.localtime%></small>
  </div>
</div>
<%= link_to 'EDIT PASSWORD', edit_info_path, class: "btn btn-xl float-right"%>
<% if(info.bodycolor.value == "bg-card-yellow border-top-yellow text-dark")
    "btn-outline-warning"
  elsif (info.bodycolor.value == "bg-card-blue border-top-blue text-dark")
    "btn-outline-primary"
  elsif (info.bodycolor.value == "bg-card-green border-top-green text-dark")
    "btn-outline-success"
  elsif (info.bodycolor.value == "bg-card-white border-top-white text-dark")
    "btn-outline-light"
  elsif (info.bodycolor.value == "bg-card-grey border-top-grey text-dark")
    "btn-outline-secondary"
  elsif (info.bodycolor.value == "bg-card-black border-top-black text-dark")
    "btn-outline-dark"
  elsif (info.bodycolor.value == "bg-card-orange border-top-orange text-dark")
    "btn-outline-warning"
  elsif (info.bodycolor.value == "bg-card-red border-top-red text-dark")
    "btn-outline-danger"
  elsif (info.bodycolor.value == "bg-card-purple border-top-purple text-dark")
    "btn-outline-light"
end %>

<div class="container-fluid" style="height: vh100;">
  <div class="form-margin">
    <div class="card <%= @info.bodycolor.value%>">
      <div class="card-header">
        <%= link_to 'EDIT PASSWORD', edit_info_path, class: "btn btn-xl btn-outline-warning float-right" %>
        <h1 class="display-4"><%= @info.servicename %></h1>
      </div>
      <div class="card-body">
        <p class="card-text"><b>Nickname:   </b>  <%= @info.nickname %></p>
        <p class="card-text"><b>Email:   </b>  <%= @info.email %></p>
        <p class="card-text"><b>Password:   </b>  <%= @info.password %></p>
        <hr>
        <p class="card-text"><b>Extra notes:  </b></p><br><%= @info.content %>
      </div>
    </div>
  </div>
</div>

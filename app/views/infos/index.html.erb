<p id="notice"><%= notice %></p>

<h1>Infos</h1>

<table>
  <thead>
    <tr>
      <th>Bodycolor</th>
      <th>Servicename</th>
      <th>Nickname</th>
      <th>Email</th>
      <th>Password</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
      <tr>
        <td><%= info.bodycolor_id %></td>
        <td><%= info.servicename %></td>
        <td><%= info.nickname %></td>
        <td><%= info.email %></td>
        <td><%= info.password %></td>
        <td><%= info.content %></td>
        <td><%= link_to 'Show', info %></td>
        <td><%= link_to 'Edit', edit_info_path(info) %></td>
        <td><%= link_to 'Destroy', info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

